<!DOCTYPE html>
<!--[if lt IE 7]> <html class="ie lt-ie9 lt-ie8 lt-ie7 sidebar sidebar-social footer-sticky"> <![endif]-->
<!--[if IE 7]>    <html class="ie lt-ie9 lt-ie8 sidebar sidebar-social footer-sticky"> <![endif]-->
<!--[if IE 8]>    <html class="ie lt-ie9 sidebar sidebar-social footer-sticky"> <![endif]-->
<!--[if gt IE 8]> <html class="ie sidebar sidebar-social footer-sticky"> <![endif]-->

<!--[if !IE]><!-->
<html class="sidebar sidebar-social footer-sticky">
<!-- <![endif]-->

<head>
  <title><%= t('app.app_name') %></title>

  <!-- Meta -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">

  <!--[if lt IE 9]>
  <link rel="stylesheet" href="../../assets/components/library/bootstrap/css/bootstrap.min.css" />
  <![endif]-->

  <!--  Stylesheet Complete CSS compiled from ../../assets/css/admin/module.admin.stylesheet-complete.less -->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "i18n" %>
  <%= javascript_include_tag "translations" %>
  <%= javascript_tag do %>
      I18n.defaultLocale = "<%= I18n.default_locale %>";
      I18n.locale = "<%= I18n.locale %>";
      I18n.frontend = "<%= I18n.locale %>";
  <% end %>
  <%= csrf_meta_tags %>

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
  <![endif]-->

  <!-- HEADER SCRIPTS GO HERE -->
<style>
    .language{
      float:left;
      margin-left:5px;
        list-style-type: none;
    }
    .language a{
    color:#000000;
        font-size: 11px;
    }
</style>
  <script>
      if ( /*@cc_on!@*/ false && document.documentMode === 10)
      {
          document.documentElement.className += ' ie ie10';
      }
  </script>
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container-fluid" style="background-color: indianred">
        <div class="row" id="aes_header">
          <div class="col-xs-6 col-md-6 col-sd-6">
            <a href="/" class="links"><%= t('app.app_short_name') %></a>
          </div>
          <div class="col-xs-6 col-md-6 col-sd-6" style="text-align: right">
            <a href="/about-us" class="links"><%= t('app.lb_about_us') %></a>
          </div>
        </div>
  </div>
</nav>
<div class="container-fluid">
    <div class="row" style="margin-top: 100px">
      <div class="col-md-7">
        <div id="slogan">
          <%= image_tag "logo/symbol.png" %>
        </div>
      </div>
      <div class="col-md-5">
        <%= yield %>
      </div>
    </div>
  <div class="row" style="margin-top: 20px;" >
    <div class="col-md-2">
    </div>
    <div class="col-md-8" style="border-top: 1px solid #CCC; padding-top: 5px">
      <div class="col-md-4">
      </div>
      <div class="col-md-4">
        <ul style="padding-left: 0px;">
          <% Language.all.each do |language| %>
              <li class="language">
                <%= link_to user_settings_change_language_path(language:language.id), data: {language:'body'} do %>
                    <%= language.name %>
                <% end %>
              </li>
          <% end %>
        </ul>
      </div>
        <div class="col-md-4">
        </div>
    </div>
    <div class="col-md-2">
    </div>
  </div>
</div>
<!-- /container -->



</body>
</html>
