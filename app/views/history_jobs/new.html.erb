<%= form_for @history_job, html: {id: 'history_job_form', role: 'form'} do |f| %>
    <div class="widget ">
      <div class="widget-body">
        <div id="panelhistoryjob" class="innerLR">
          <div class="historyjob" id="<%= @history_job.id %>">
            <div class="form-group">
              <%= f.text_field :company_name, maxlength: 100, class: 'form-control', placeholder: t('history_job.company_name') %>
            </div>

            <div class="form-group">
              <%= f.text_field :title, maxlength: 100, class: 'form-control', placeholder: t('history_job.title') %>
            </div>

            <div class="form-group">
              <%= f.text_field :location, maxlength: 100, class: 'form-control', placeholder: t('history_job.location') %>
            </div>

            <div class="form-group">
              <label><%= t('history_job.time_period')%></label>
            </div>

            <div class="form-group">
              <div class="row">
                <div class="col-xs-2 col-sm-1 col-md-1">
                  <label><%= t('history_job.time_period')%></label>
                </div>
                <div class="col-xs-4 col-sm-2 col-md-2">
                  <%= f.select :start_month, month_options_for_select, {:include_blank => t('history_job.month')}, {class: 'form-control'} %>
                </div>
                <div class="col-xs-4 col-sm-2 col-md-2">
                  <%= f.select :start_year, year_options_for_select, {:include_blank => t('history_job.year')},  {class: 'form-control'}%>
                </div>
                </div>
            </div>
            <div class="form-group">
              <div class="row">
                <div class="col-xs-2 col-sm-1 col-md-1">
                  <label><%= t('history_job.time_period')%></label>
                </div>
                <div class="col-xs-4 col-sm-2 col-md-2">
                  <%= f.select :end_month, month_options_for_select, {:include_blank => t('history_job.month')}, {class: 'form-control'} %>
                </div>
                <div class="col-xs-4 col-sm-2 col-md-2">
                  <%= f.select :end_year, year_options_for_select, {:include_blank => t('history_job.year')},  {class: 'form-control'}%>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="checkbox">
                <label class="checkbox-custom", style="margin-left: 20px">
                <%= f.check_box :current%>
                <!--<i class="fa fa-fw fa-square-o" style="margin-left: -13px;"></i> -->
                <%= t('history_job.lb_current') %>
                </label>
              </div>
            </div>

            <div class="form-group">
              <%= f.text_area :description, maxlength: 2000, class: 'form-control', placeholder: t('history_job.description'), rows: 4 %>
            </div>

            <div class="form-group">
              <div class="row">
                <div class="col-md-2 col-sm-2">
                  <button type="submit" class="fa fa-search form-control btn btn-primary height34" data-target="body">&nbsp;<%= t('history_job.btnSave') %></button>
                </div>
              </div>
              <div class="col-md-2 col-sm-2">
                <button type="cancel" class="fa fa-search form-control btn btn-primary height34" data-target="body">&nbsp;<%= t('history_job.btnCancel') %></button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

<% end %>



