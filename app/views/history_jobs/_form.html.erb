                <!--<button type="cancel" class="fa fa-search form-control btn btn-primary height34" data-target="body">&nbsp;<%= t('history_job.btnCancel') %></button>-->
              <!--</div>-->
            <!--</div>-->
          </div>
        <!--</div>-->
      </div>
    </div>

<% end %>



