<%=stylesheet_link_tag 'student' %>
<div class="innerLR">
  <h3 class="aes-color"><i class="fa fa-search"></i>&nbsp;<%= t('search_curriculum.title_search_curriculum') %></h3>

  <div class="warning">
      <p><strong>カリキュラムをサーチ:</strong><br>
        - <strong>ステップ 1</strong>: カテゴリを選択してください。<br>
        - <strong>ステップ 2</strong>: レベルを選択してください。<br>
        - <strong>ステップ 3</strong>: カリキュラム名を入力してください。<br>
      </p>
  </div>

<a class="btn btn-primary" id="btn_show_modal">aaaaaaaaa</a>
</div>

<!-- Modal -->
<div class="modal fade" style="overflow: auto;" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="updateModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="updateModalLabel">Modal title</h4>
      </div>
      <div id="modalContent" class="modal-body">

        <%= render 'search/mentor' %>

      </div>
      <div style="clear: both"></div>
      <div class="modal-footer">
        <button id="btnSave" type="button" class="btn btn-primary"><%= t('button.btn_save')%></button>
        <button id="btnCancel" type="button" class="btn btn-default" data-dismiss="modal"><%= t('button.btn_cancel')%></button>
      </div>
    </div>
  </div>
</div>

<script>


  $("#btn_show_modal").click(function(e){
      e.preventDefault();

      $("#updateModal").modal();
  })

    $(document).ready(function () {
        $("#search_curriculum_form").validate({
            onfocusout: false,
            onkeyup: false,
            rules: {
                "category_id": {required: true},
                "keyword": {maxlength: 200}

            },
            messages: {
                "category_id": {required: I18n.t('js.validate.msg_required')},
                "keyword": {maxlength :I18n.t('js.validate.msg_maxlength')}
            },
            errorPlacement: function (error, element) {
                error.insertAfter(element);
            },
            submitHandler: function (form) {

                $('#search_curriculum_form').find('input:text').each(function () {
                    $(this).val($.trim($(this).val()));
                });
                form.submit();

            },
            invalidHandler: function (form, validator) {
                $('#div_msg_error').text('');

                var errors = validator.numberOfInvalids();
                if (errors) {
                    validator.errorList[0].element.focus();
                }
            }
        });

        $("#category_select" ).change(function () {
            $.ajax('/search/update_levels', {
                type: 'GET',
                dataType: 'script',
                data: {
                    category_id: $("#category_select option:selected").val()
                },
                beforeSend: function (xhr) {
                    $.loader.open({imgUrl: "<%= asset_path('assets/template/ajaxloader/images/loading16x16.gif') %>"});
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    $.loader.close(true);
                    console.log("AJAX Error: " + textStatus);
                },
                success: function (data, textStatus, jqXHR) {
                    $.loader.close(true);
                }
            });
        })
    });

</script>