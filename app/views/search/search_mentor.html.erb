<%=stylesheet_link_tag 'student' %>
<div class="innerLR">
  <h3 class="aes-color"><i class="fa fa-search"></i>&nbsp;<%= t('search_mentor.title_search_mentor') %></h3>

  <div class="row">
    <div class="widget"> ‌ ‌
      <div class="widget-body">
        <div class="search-form">
        <%= form_tag search_search_mentor_path, id: 'search_mentor_form', role: 'form', method: :get do %>
            <% if flash.now[:error] %>
                <div id="div_msg_error" class="msg_error">
                  <ul>
                    <li><%= flash.now[:error] %></li>
                  </ul>
                </div>
            <% end %>
              <div class="row">
                <div class="col-md-10 col-sm-10">
                  <%= text_field_tag "keyword", params[:keyword], placeholder: t('search_mentor.placeholder_keyword'), class: "form-control search_all", maxlength:200 %>
                </div>
                <div class="col-md-2 col-sm-2">
                  <button type="submit" class="fa fa-search btn btn-primary btn-block height34" data-target="body"></button>
                </div>

              </div>

        <% end %>
        </div>
      </div>
    </div>
  </div>

  <% if @users %>
      <div class="widget"> ‌
        <h5 class="text-uppercase strong innerAll border-bottom" style="margin-top: -20px"><%= @total_entries %> <%= t('search_mentor.lb_search_results')%></h5>
        <div id="search-result" style="margin-top: -8px">
          <%= render partial: "search/users" %>
        </div>
      </div>
  <% end%>
</div>



<script>

    $(document).ready(function () {

    });

</script>